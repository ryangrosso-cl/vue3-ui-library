{
  "name": "vue3-ui-library",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "type-build": "vue-tsc --declaration --emitDeclarationOnly -p tsconfig.build.json",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "pinia": "^2.1.7",
    "vue": "^3.4.21",
    "vuetify": "^3.5.15"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.3.2",
    "@clearlife-limited/eslint-config-vue3": "^1.0.1",
    "@rushstack/eslint-patch": "^1.8.0",
    "@storybook/addon-essentials": "^8.0.7",
    "@storybook/addon-interactions": "^8.0.7",
    "@storybook/addon-links": "^8.0.7",
    "@storybook/blocks": "^8.0.7",
    "@storybook/test": "^8.0.7",
    "@storybook/vue3": "^8.0.7",
    "@storybook/vue3-vite": "^8.0.7",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.12.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.5",
    "@vue/tsconfig": "^0.5.1",
    "cypress": "^13.7.2",
    "eslint": "^8.57.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-vue": "^9.23.0",
    "jsdom": "^24.0.0",
    "npm-run-all2": "^6.1.2",
    "sass": "^1.74.1",
    "sass-loader": "^14.1.1",
    "start-server-and-test": "^2.0.3",
    "storybook": "^8.0.7",
    "typescript": "~5.4.0",
    "vite": "^5.2.8",
    "vitest": "^1.4.0",
    "vue-tsc": "^2.0.11"
  }
}
